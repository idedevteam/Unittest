        android:fontFamily="@font/rajdhani_regular"
        android:layout_marginStart="96dp"
        app:layout_constraintStart_toStartOf="@id/subtitle_motor"
        app:layout_constraintTop_toBottomOf="@id/info_id_motor"/>

