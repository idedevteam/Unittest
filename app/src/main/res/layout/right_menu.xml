        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="V"
        android:textColor="?android:attr/textColorSecondary"
        android:fontFamily="@font/rajdhani_regular"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/info_voltage"/>
    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/info_current"
        android:textColor="?android:attr/textColorSecondary"
        android:fontFamily="@font/rajdhani_regular"
        app:layout_constraintStart_toStartOf="@id/subtitle_motor"
        app:layout_constraintBottom_toBottomOf="@id/info_current"/>
