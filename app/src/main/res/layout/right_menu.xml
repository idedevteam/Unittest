        android:layout_marginTop="0dp"
        android:layout_marginStart="96dp"
        app:layout_constraintStart_toStartOf="@id/subtitle_motor"
        app:layout_constraintTop_toBottomOf="@id/subtitle_battery"/>
    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/info_voltage"
        android:textColor="?android:attr/textColorSecondary"
        android:fontFamily="@font/rajdhani_regular"
        app:layout_constraintStart_toStartOf="@id/subtitle_motor"
        app:layout_constraintBottom_toBottomOf="@id/info_voltage"/>
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/info_voltage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/not_available"
        android:textColor="?android:attr/textColorSecondary"
        android:fontFamily="@font/rajdhani_regular"
        android:layout_marginStart="96dp"
        app:layout_constraintStart_toStartOf="@id/subtitle_motor"
        app:layout_constraintTop_toBottomOf="@id/info_id_battery"/>
