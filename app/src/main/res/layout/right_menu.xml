        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/info_id_motor"
        android:textColor="?android:attr/textColorSecondary"
        android:fontFamily="@font/rajdhani_regular"
        app:layout_constraintStart_toStartOf="@id/subtitle_motor"
        app:layout_constraintBottom_toBottomOf="@id/info_id_motor"/>
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/info_id_motor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/not_available"
        android:textColor="?android:attr/textColorSecondary"
