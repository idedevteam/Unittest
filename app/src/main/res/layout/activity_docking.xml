<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root"
    android:background="#101010"
    tools:context=".DockingActivity">
    <android.support.constraint.Guideline
        android:id="@+id/guide_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="320dp" />
    <android.support.constraint.ConstraintLayout
        android:id="@+id/circle"
        android:layout_width="392dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/guide_vertical"
        app:layout_constraintStart_toStartOf="@id/guide_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foreground="@drawable/center_off"
            android:background="@drawable/center_night_mode_circle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <!-- CHARGE STATUS -->
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/charge_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_battery_charging_night"
            android:layout_marginTop="8dp"
            android:layout_marginStart="93dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <!-- CLOCK -->
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="13:32"
            android:textColor="@color/baseDay"
            android:textSize="23sp"
            android:fontFamily="@font/rajdhani_medium"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <!-- NETWORK STATUS -->
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/network"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/not_available"
            android:textSize="16sp"
            android:layout_marginEnd="100dp"
            android:textColor="@color/baseDay"
            android:fontFamily="@font/rajdhani_semibold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/charge_status"
            app:layout_constraintTop_toTopOf="@id/charge_status" />
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/network_strength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_signal_level_list"
            android:layout_marginStart="2dp"
            app:layout_constraintStart_toEndOf="@id/network"
            app:layout_constraintTop_toTopOf="@id/network"
            app:layout_constraintBottom_toBottomOf="@id/network"/>

        <!-- TORSI -->
        <com.gbmaniac.smartdashboard.GesitsProgressBarCircular
            android:id="@+id/torque"
            android:layout_width="256dp"
            android:layout_height="256dp"
            tools:progress="9"
            android:max="255"
            style="?android:attr/progressBarStyleHorizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <TextView
            android:id="@+id/torque_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/highlight"
            android:text="@string/torque"
            android:textSize="16sp"
            android:rotation="50"
            android:textAlignment="viewEnd"
            android:fontFamily="@font/rajdhani_medium"
            android:layout_marginStart="52dp"
            android:layout_marginBottom="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
